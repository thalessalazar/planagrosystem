<script>
    $('.sendBtn').hide();
    $('#form-dados .editBtn').click(function () {
        $('.editBtn').hide();
        $('.sendBtn').show();
        $('#form-dados input').each(function () {
            $(this).removeAttr("readonly");
        })
    });
    $('#form-dados #backBtn').click(function () {
        $('.editBtn').show();
        $('.sendBtn').hide();
        $('#form-dados input').each(function () {
            $(this).attr("readonly", true);
        })
    });
</script>

