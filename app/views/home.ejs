<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('includes/head.ejs') %>
</head>

<body class="animsition">
    <div class="page-wrapper">
        <%- include('includes/nav') %>

        <!-- MAIN CONTENT-->
        <main class="main-content">
            <div class="section__content section__content--p30">
                <div class="container-fluid">
                    <div class="row">

                        <div class="col-lg-6">
                            <div class="custom-card custom-card--no-shadow custom-card--no-pad m-b-40">
                                <div class="custom-card-title" style="background-image:url('../images/bg-title-01.jpg');">
                                    <div class="bg-overlay bg-overlay--main"></div>
                                    <h3>
                                        <i class="zmdi zmdi-account-calendar"></i>Tarefas Rápidas</h3>
                                    <button class="custom-btn-plus" data-toggle="modal" data-target="#criar-anotacao">
                                        <i class="zmdi zmdi-plus"></i>
                                    </button>
                                </div>
                                <div class="task js-list-load">
                                    <div class="task__title">
                                        <p>Tarefas de Débora </p>
                                    </div>
                                    <div class="task-list js-scrollbar3">
                                        <div class="task__item task__item--danger">
                                            <div class="task__item-inner">
                                                <h5 class="task">
                                                    <a href="../#">Ligar para cliente Robson Mesquita</a>
                                                </h5>
                                                <span class="time">Passar informações sobre a nova casa no bairro
                                                    Mascaranhas</span>

                                                <button class="check-in"><i class="zmdi zmdi-check"></i><i class=""></i></button>
                                            </div>
                                        </div>
                                        <div class="task__item task__item--warning">
                                            <div class="task__item-inner">
                                                <h5 class="task">
                                                    <a href="../#">Falar com a secretária sobre papel</a>
                                                </h5>
                                                <span class="time">Solicitar documentos da casa cod 8232</span>

                                                <button class="check-in"><i class="zmdi zmdi-check"></i><i class=""></i></button>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="task__clear-all">
                                        <button class="clear-btn">Limpar tarefas</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <div class="custom-card custom-card--no-shadow custom-card--no-pad m-b-40">
                                <div class="custom-card-title" style="background-image:url('../images/bg-title-01.jpg');">
                                    <div class="bg-overlay bg-overlay--main"></div>
                                    <h3>
                                        <i class="zmdi zmdi-account-calendar"></i>Compromissos próximos</h3>
                                    <a role="button" href="/agenda" class="custom-btn-plus">
                                        <i class="zmdi zmdi-plus"></i>
                                    </a>
                                </div>
                                <div class="task js-list-load">
                                    <div class="task__title">
                                        <p>Baseado na sua agenda</p>
                                    </div>
                                    <div class="task-list js-scrollbar3">
                                        <div class="task__item task__item--warning">
                                            <div class="task__item-inner">
                                                <h5 class="task">
                                                    <a href="../#">Receber visita na propiedade cód. 2390 de Paulo Freitas</a>
                                                </h5>
                                                <span class="time">14:00</span>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="copyright">
                                <p></p>
                            </div>
                        </div>
                    </div>
                </div>
                <%- include('includes/footer.ejs')%>
            </div>
        </main>
    </div>
    </div>
    <%- include('includes/modals/nova-anotacao') %>
